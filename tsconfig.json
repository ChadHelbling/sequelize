{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceRoot": "",
    "outDir": "./dist/",
    "strict": true,
    "baseUrl": "./",
    "rootDir": "./",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "checkJs": false,
    "removeComments": false
  },
  "include": ["./lib/**/*.ts"]
}
